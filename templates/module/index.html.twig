{% extends 'base.html.twig' %}

{% block title %}Liste des modules{% endblock %}
{% block styleheets %}
{% endblock %}

{% block contenu %}

<h1>Liste des modules</h1>

<a class="btn btn-primary" href="{{ path('module_add') }}"> Ajouter un module</a>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Nom du module</th>
      <th scope="col">descriptif</th>
      <th scope="col"> Action</th>
    </tr>
  </thead>
  <tbody>
  
{% for module in modules %}

<tr>
    <td> {{module.nom }}</td>
    <td> {{module.descriptif }}</td>
    <td><a href="{{ path('module_delete', {'id':module.id }) }}"><i class="far fa-trash-alt"></i></a> <a href="{{ path('module_edit', {'id':module.id }) }}"><i class="far fa-edit"></i></a></td>
   
    
{% endfor %}

  </tbody>
</table>

{% endblock %}

