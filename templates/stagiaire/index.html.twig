{% extends 'base.html.twig' %}

{% block title %}Liste des stagiaires{% endblock %}

{% block contenu %}

<h1>Liste des stagiaires</h1>

<a class="btn btn-primary" href="{{ path('stagiaire_add') }}"> Ajouter un stagiaire</a>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Nom / prénom</th>
      <th scope="col">Date de naissance</th>
      <th scope="col">Email</th>
      <th scope="col">Téléphone</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  
{% for stagiaire in stagiaires %}
<tr>
    <td><a href="{{ path('stagiaire_show', {'id':stagiaire.id}) }}">{{ stagiaire.nom ~' '~ stagiaire.prenom }}</a></td>
    <td>{{stagiaire.dateNaissance | date("d/m/Y") }}</td>
    <td>{{stagiaire.email }}</td>
    <td>{{stagiaire.telephone }}</td>
     <td><a href="{{ path('stagiaire_delete', {'id':stagiaire.id }) }}"><i class="far fa-trash-alt"></i></a> <a href="{{ path('stagiaire_edit', {'id':stagiaire.id }) }}"><i class="far fa-edit"></i></a></td>
</tr>
    
{% endfor %}
  </tbody>
</table>

{% endblock %}

