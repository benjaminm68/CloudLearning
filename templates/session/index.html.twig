{% extends 'base.html.twig' %}

{% block title %}Liste des sessions{% endblock %}
{% block styleheets %}
{% endblock %}

{% block contenu %}

<h1>Liste des sessions</h1>

<a class="btn btn-primary" href="{{ path('session_add') }}"> Ajouter une session</a>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Nom de la formation</th>
      <th scope="col">Date de d√©but</th>
      <th scope="col">Date de fin</th>
      <th scope="col">Place(s) restante</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  
{% for session in sessions %}

<tr>
    <td> {{session.contenir.nom }}</td>
    <td>{{session.dateDebut | date("d/m/Y") }}</td>
    <td>{{session.dateFin | date("d/m/Y") }}</td>
    <td>{{session.nbPlaces }}</td>
   <td><a href="{{ path('session_delete', {'id':session.id }) }}"><i class="far fa-trash-alt"></i></a> <a href="{{ path('session_edit', {'id':session.id }) }}"><i class="far fa-edit"></i></a></td>
    
{% endfor %}

  </tbody>
</table>

{% endblock %}

