{% extends 'base.html.twig' %}

{% block title %}
	{{ formation.nom }}
{% endblock %}

{% block contenu %}
	<h1>{{ formation.nom }}</h1>
	<article>
		<h3>Description</h3>
		<p>{{ formation.descriptif }}</p>
		<h3>Modules</h3>
		{% for duree in formation.durees %}
		<h6>{{ duree.modules.nom }}</h6>
		<p>{{ duree.modules.descriptif }}</p>
		{% endfor %}
	
		
		<img src="{{ formation.image }}" alt="image reprÃ©sentant la formation">
	</article>

	<h2>Sessions disponibles</h2>

	{% for session in formation.sessions %}
		<p>{{ session.dateDebut | date('d/m/Y')}}
			-
			{{ session.dateFin | date('d/m/Y') }}</p>
	{% endfor %}

	<h2>Inscription</h2>

	<div class="contactForm mt-4">
		{{ form_start(form) }}
		<div class="row">
			<div class="col">{{ form_row(form.firstname) }}</div>
			<div class="col">{{ form_row(form.lastname) }}</div>
		</div>
        <div class="row">
			<div class="col">{{ form_row(form.email) }}</div>
			<div class="col">{{ form_row(form.phone) }}</div>
		</div>
		{{form_rest(form)}}
        <br>
        <div class="form-group">
        <button class="btn btn-primary">Envoyer</button>
        </div>

		{{ form_end(form) }}
	</div>
{% endblock %}
